<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="registration">
        <div class="header-noBorder">
            <h1 class="header-text">Registration</h1>
            <div class="line line_blue"> </div>
        </div>
        <form id="registration-form" method="post">
            <div class="input-field input-field-username">
                <div class="input-line">
                    <label for="username" class="input-line__header">Username </label>
                    <input class="input-line__input registration__input-field-username__input-line__input"
                           type="text" name="username" id="username"/>
                </div>
                <div class="validation-info registration__input-field-username__validation-info">
                    Введите ваш логин. От 4 до 9 латинских букв</div>
                <div class="line registration__input-field-username__line"> </div>
            </div>
            <div class="input-field input-field-password">
                <div class="input-line input-line-password">
                    <label for="password" class="input-line__header">Password </label>
                    <input class="input-line__input  registration__input-field-password__input-line__input"
                           type="password" name="password" id="password"/>
                </div>
                <div class="validation-info registration__input-field-password__validation-info">
                    Введите ваш пароль. От 4 до 16 латинских букв, цифр и символов нижнего подчеркивания</div>
                <div class="line registration__input-field-password__line"> </div>
            </div>
            <div class="input-field input-field-confirm">
                <p class="input-line input-line-confirm">
                        <label for="confirm" class="input-line__header">Confirm</label>
                        <input class="input-line__input registration__input-field-confirm__input-line__input"
                               type="password" name="confirm" id="confirm"/>
                </p>
                <div class="validation-info registration__input-field-confirm__validation-info">Повторите введенный пароль</div>
                <div class="line registration__input-field-confirm__line"> </div>
            </div>
            <button type="submit" class="button registration__button">Registration</button>
        </form>
        <button class="button button_long button_smallMargTop js-button-onMain" data-href="#">On main</button>
        <div class="validation-info validation-info-common registration__validation-info-common validation-info_error "> </div>
    </div>
</fest:template>

