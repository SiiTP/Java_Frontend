<!--Классы:
    registration__input-line__input__username
    registration__username__validation-info
    registration__username__line
    и т. д.
нужны для однозначного нахождения соответствующих полей при валидации
 -->
<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="registration">
        <form id="registration-form" method="post">
            <div class="input-field">
                <p class="input-line">
                    <label for="username" class="input-line__header">Username </label>
                    <input class="input-line__input registration__input-line__input__username"
                           type="text" name="username" id="username"/>
                </p>
                <div class="validation-info registration__username__validation-info">
                    Введите ваш логин. От 4 до 9 прописных латинских букв</div>
                <div class="line registration__username__line"> </div>
            </div>
            <div class="input-field">
                <p class="input-line">
                    <label for="password" class="input-line__header">Password </label>
                    <input class="input-line__input  registration__input-line__input__password"
                           type="password" name="password" id="password"/>
                </p>
                <div class="validation-info registration__password__validation-info">
                    Введите ваш пароль. От 4 до 16 латинских букв, цифр и символов нижнего подчеркивания</div>
                <div class="line registration__password__line"> </div>
            </div>
            <div class="input-field">
                <p class="input-line">
                        <label for="confirm" class="input-line__header">Confirm</label>
                        <input class="input-line__input registration__input-line__input__confirm"
                               type="password" name="confirm" id="confirm"/>
                </p>
                <div class="validation-info registration__confirm__validation-info">Повторите введенный пароль</div>
                <div class="line registration__confirm__line"> </div>
            </div>
            <button type="button" class="button registration__button">Registration</button>
        </form>

    </div>
</fest:template>

