<fest:template xmlns:fest="http://fest.mail.ru" context_name="rooms">
    <div class="rooms">
        <div class="rooms__header">
            <h1 class="header-text">Rooms:</h1>
        </div>
        <div class="line line_blue"> </div>
        <div class="rooms__lines">
            <div class="rooms__lines__header">
                <div class="rooms__lines__header__index">â„–</div>
                <div class="rooms__lines__header__name">Name</div>
                <div class="rooms__lines__header__players">Players</div>
                <div class="rooms__lines__header__maxPlayers">Limit</div>
            </div>
            <fest:each iterate="rooms" index="i" value="item">
                <div class="rooms__lines__line">
                    <div class="rooms__lines__line__index"><fest:value>i</fest:value></div>
                    <div class="rooms__lines__line__name"><fest:value>item.name</fest:value></div>
                    <div class="rooms__lines__line__players"><fest:value>item.players</fest:value></div>
                    <div class="rooms__lines__line__maxPlayers"><fest:value>item.maxPlayers</fest:value></div>
                    <button class="button rooms__lines__line__button">Connect!</button>
                </div>
            </fest:each>
        </div>
    </div>
</fest:template>

