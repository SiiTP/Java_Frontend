<?xml version="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <!--fest:value>data.name</fest:value>
    <fest:value>data.score</fest:value>
    <fest:value>data.isLogged</fest:value-->

    <div class="menu-container">
        <div class="header">
            <div class="logo">
                <div class="logo__top">
                    <div class="logo__top__line"> </div>
                </div>
                <div class="logo__center">
                    <span class="logo__beam">Beam</span>
                    <span class="logo__divider"> </span>
                    <span class="logo__balls">Balls</span>
                </div>
                <div class="logo__bottom">
                    <div class="logo__bottom__line"> </div>
                </div>
            </div>
        </div>
        <div class="menu" align="center">
            <div class="menu__container-game-btn">
                <button class="button menu__button menu__button_game
                {data.isLogged == true ? '' : 'menu__button_disabled'}" data-href="#game">Game</button>
                <label class="menu__container-game-btn__msg"> </label>
            </div>
            <div class="menu__container-game-btn">
                <button class="button menu__button menu__button_scoreboard" data-href="#scoreboard">Scoreboard</button>
            </div>
            <div class="menu__container-game-btn">
                <fest:choose>
                    <fest:when test="data.isLogged">
                        <button class="button menu__button menu__button_log" data-href="#logout">Logout</button>
                    </fest:when>
                    <fest:when test="!data.isLogged">
                        <button class="button menu__button menu__button_log" data-href="#login">Login</button>
                    </fest:when>
                </fest:choose>
            </div>
        </div>
        <div class="line"> </div>
    </div>
