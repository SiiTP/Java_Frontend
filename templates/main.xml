<?xml version="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <fest:set name="LoggedBar">
        <div class="logout">
            <div class="logout__info">Вы вошли, как:<fest:space/><span><fest:value>data.username</fest:value></span></div>
            ;
            <fest:space/>
            <div class="logout__info">Ваш счет :<fest:space/><span><fest:value>data.score</fest:value></span></div><br/>
            <button type="button" class="button button_long smallMargTop logout__button" data-href="#logout">Logout</button>
        </div>
    </fest:set>

    <div class="menu-container">
        <div class="header">
            <div class="logo">
                <div class="logo__top">
                    <div class="logo__top__line"> </div>
                </div>
                <div class="logo__center">
                    <span class="logo__center__beam">Beam</span>
                    <span class="logo__center__divider"> </span>
                    <span class="logo__center__balls">Balls</span>
                </div>
                <div class="logo__bottom">
                    <div class="logo__bottom__line"> </div>
                </div>
            </div>
            <fest:choose>
                <fest:when test="data.logged">
                    <fest:get name="LoggedBar"/>
                </fest:when>
                <fest:otherwise>
                    <div class="dontLogged">Вы не авторизованы</div>
                </fest:otherwise>
            </fest:choose>
        </div>
        <div class="line line_blue mediumMargTop"> </div>
        <div class="menu">
            <div class="container-game-btn">
                <button class="button container-game-btn__button container-game-btn__button_game
                {data.logged ? '' : 'container-game-btn__button_disabled'}" data-href="#rooms">Game</button>
            </div>
            <div class="container-game-btn">
                <button class="button container-game-btn__button container-game-btn__button_scoreboard" data-href="#scoreboard">Scoreboard</button>
            </div>
            <div class="container-game-btn">
                <fest:choose>
                    <fest:when test="data.logged">
                        <button class="button container-game-btn__button container-game-btn__button_log" data-href="#logout">Logout</button>
                    </fest:when>
                    <fest:otherwise>
                        <button class="button container-game-btn__button container-game-btn__button_log" data-href="#login">Login</button>
                    </fest:otherwise>
                </fest:choose>
            </div>
            <div class="menu__msg-game"> </div>
        </div>
        <div class="line line_blue"> </div>
    </div>
</fest:template>
