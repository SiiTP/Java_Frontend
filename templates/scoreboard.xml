<fest:template xmlns:fest="http://fest.mail.ru" context_name="scores">
    <div class="scoreboard">
        <div class="header-text">Scoreboard</div>
        <div class="table">
            <header class="table-header">
                <div class="table__table-header__item">Username</div>
                <div class="table__table-header__item table__table-header__item_alignRight">Score</div>
            </header>
            <div class="line line_blue table__line"> </div>
            <main class="table__content">
                <fest:each iterate="scores" index="i" value="v">
                    <div align="center" class="table__content-line {i % 2 == 0 ? 'table__item_even' : 'table__item_odd'}">
                        <div class="table__item table__item-name">
                            <fest:value>v.name</fest:value>
                        </div>
                        <div class="vertical-line vertical-line_tableRelPos {i % 2 == 0 ? 'vertical-line_green' : ''}" style=""> </div>
                        <div class="table__item table__item-score">
                            <fest:value>v.score</fest:value>
                        </div>
                    </div>
                </fest:each>
            </main>
            <div class="line line_blue table__line"> </div>
            <button class="button scoreboard__button" data-href="#">On main</button>
        </div>
    </div>
</fest:template>

